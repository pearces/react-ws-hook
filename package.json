{
  "name": "@pearces/react-ws-hook",
  "version": "0.2.1",
  "description": "A custom react hook to communicate over websockets",
  "main": "./lib/cjs/index.js",
  "module": "./lib/mjs/index.js",
  "files": [
    "lib",
    "*.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pearces/react-ws-hook.git"
  },
  "keywords": [
    "react",
    "npm",
    "websocket",
    "hook",
    "node"
  ],
  "author": "Stephen Pearce (https://github.com/pearces)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pearces/react-ws-hook/issues"
  },
  "homepage": "https://github.com/pearces/react-ws-hook#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.17",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-react": "^7.22.15",
    "@testing-library/react": "^14.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.49.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "react": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "ws": "^8.13.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "scripts": {
    "test": "npm run lint && npm run unit",
    "lint": "eslint src",
    "unit": "jest",
    "build:module": "BABEL_ENV=module babel src --out-dir lib/mjs --ignore '**/__tests__' --copy-files --no-copy-ignored",
    "build:node": "BABEL_ENV=node babel src --out-dir lib/cjs --ignore '**/__tests__' --copy-files --no-copy-ignored",
    "build": "npm run clean && npm run build:module && npm run build:node",
    "clean": "node utils/clean.cjs lib"
  }
}
